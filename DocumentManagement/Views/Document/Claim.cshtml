@model ClaimViewModel
@{ 
    string mainPageDescription = "Înregistrați o cerere de eliberare documente";
}

<div class="page-main-description">@mainPageDescription</div>
<form method="post" enctype="multipart/form-data" asp-controller="Document" asp-action="Claim">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="DocumentType" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            @(Html.DevExtreme().SelectBox().Name("DocumentType").DataSource(ClaimViewModel.ListDocType).Placeholder("Tip document").ShowClearButton(true))
            <span asp-validation-for="DocumentType" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            @(Html.DevExtreme()
                .TextArea()
                .Name("Description")
                .Height(50)
            )
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    @(Html.DevExtreme().Button()
        .ID("button")
        .Text("Trmite")
        .Type(ButtonType.Success)
        .UseSubmitBehavior(true))
</form>

